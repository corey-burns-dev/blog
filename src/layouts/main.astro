---
import "@styles/global.css";

const {
	title = "Corey Burns",
	description = "Corey Burns - Blog",
	ogImage = "/og-image.png",
	ogType = "website",
	pubDate,
	author = "Corey Burns",
	keywords = "Corey Burns, Blog, Developer, Full-stack, Software Engineering, Web Development, JavaScript, TypeScript, Astro",
} = Astro.props;

const absoluteOgImage =
	typeof ogImage === "string" && ogImage.startsWith("/")
		? `${Astro.url.origin}${ogImage}`
		: ogImage;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark" />
    <meta name="theme-color" content="#0a0a0a" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteOgImage} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content="Corey Burns Blog" />

    {ogType === 'article' && pubDate && (
      <>
        <meta property="article:published_time" content={pubDate.toISOString()} />
        <meta property="article:author" content={author} />
      </>
    )}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteOgImage} />

    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={Astro.url.href} />

    <script is:inline type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        "url": Astro.url.origin,
        "name": title,
        "description": description,
        "author": { "@type": "Person", "name": author },
        "keywords": keywords
      })}
    </script>

    {ogType === 'article' && pubDate && (
      <script is:inline type="application/ld+json">
        {JSON.stringify({
          "@context": "https://schema.org",
          "@type": "Article",
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": Astro.url.href
          },
          "headline": title,
          "description": description,
          "author": { "@type": "Person", "name": author },
          "datePublished": pubDate.toISOString(),
          "image": absoluteOgImage
        })}
      </script>
    )}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
  </head>
  <body class="antialiased min-h-screen bg-[#0a0a0a] text-white" style="font-family: 'JetBrains Mono', 'Fira Code', monospace;">
    <!-- CRT scanline effect -->
    <div class="pointer-events-none fixed inset-0 z-50 overflow-hidden mix-blend-overlay">
      <div
        id="scanline"
        class="absolute h-[2px] w-full opacity-[0.07]"
        style="background: linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent);"
      ></div>
    </div>

    <!-- Scanline pattern overlay -->
    <div
      class="pointer-events-none fixed inset-0 z-40 opacity-[0.03]"
      style="background-image: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(255,255,255,0.1) 2px, rgba(255,255,255,0.1) 4px);"
    ></div>

    <div class="relative z-10 mx-auto max-w-6xl px-6 py-12 lg:px-12">
      <!-- Header with glitch effect -->
      <header class="gc-fade mb-16">
        <a
          href="/"
          class="mb-6 inline-block text-[10px] uppercase tracking-[0.3em] text-white/20 transition hover:text-white/50 after:hidden"
        >
          [ESC] HOME
        </a>
        <a
          href="/about"
          class="ml-6 mb-6 inline-block text-[10px] uppercase tracking-[0.3em] text-white/20 transition hover:text-white/50 after:hidden"
        >
          [CMD] ABOUT
        </a>

        <div class="relative">
          <h1
            class="gc-glitch-title text-5xl font-bold uppercase tracking-tighter text-white/90 sm:text-7xl lg:text-8xl"
            data-text="COREY//BURNS"
          >
            COREY<span class="text-[#ff0055]">//</span>BURNS
          </h1>
          <p class="mt-3 text-xs text-white/30">
            <span class="text-[#00ff88]">█</span> Full-Stack Developer & Product Designer
          </p>
        </div>
      </header>

      <slot />

      <!-- Terminal-style footer -->
      <footer class="gc-fade mt-16 border border-white/5 bg-white/1 p-6 font-mono text-[11px] leading-relaxed text-white/25">
        <p>
          <span class="text-[#00ff88]">$</span> cat about.txt
        </p>
        <p class="mt-2 text-white/35">
          Corey Burns is a full-stack product designer and engineer. Working across systems, generative AI, and performant web experiences to find harmony between computation and design.
        </p>
        <p class="mt-4">
          <span class="text-[#00ff88]">$</span> echo $CONTACT
        </p>
        <p class="text-white/40">hello@coreyburns.dev</p>
        <p class="mt-4">
          <span class="text-[#00ff88]">$</span> <span class="gc-blink">▌</span>
        </p>
      </footer>
    </div>

    <!-- Scanline Animation Script -->
    <script is:inline>
      const scanline = document.getElementById('scanline');
      if (scanline) {
        let frame = 0;
        const tick = () => {
          frame++;
          scanline.style.top = `${(frame * 2) % window.innerHeight}px`;
          requestAnimationFrame(tick);
        };
        requestAnimationFrame(tick);
      }
    </script>
  </body>
</html>
