---
import MainLayout from "./main.astro";

const { title, description, pubDate, heroImage, author = 'Corey Burns', keywords } = Astro.props;

<MainLayout title={title} description={description} ogImage={heroImage} ogType="article" pubDate={pubDate} author={author} keywords={keywords}>
  <article class="max-w-4xl px-6 py-24 mx-auto">
    <header class="text-center mb-14">
      <div class="mb-6 flex flex-wrap justify-center gap-3 text-xs font-semibold uppercase tracking-[0.3em] text-[rgb(var(--color-accent))]">
        <span>Article</span>
        <span class="opacity-30">â€¢</span>
        <time>{pubDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</time>
      </div>
      <h1 class="mb-6 text-4xl md:text-6xl">{title}</h1>
      {description && <p class="mx-auto max-w-2xl text-lg text-[rgb(var(--color-text-secondary))]">{description}</p>}
    </header>

    {heroImage && (
      <div class="glass-card mb-10 overflow-hidden rounded-[2.5rem]">
        <div class="relative h-64 md:h-80">
          <img
            src={heroImage}
            alt={title}
            class="absolute inset-0 object-cover w-full h-full"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-linear-to-tr from-[rgb(var(--color-bg-primary)/0.95)] via-[rgb(var(--color-bg-primary)/0.35)] to-transparent"></div>
        </div>
      </div>
    )}

    <div class="glass-card rounded-[2.5rem] p-8 md:p-14 article-content">
      <slot />
    </div>

    <footer class="flex justify-center mt-16">
      <a href="/blog" class="glass-card px-8 py-3 rounded-full font-semibold uppercase tracking-[0.2em] transition-all hover:-translate-y-1 text-[rgb(var(--color-text-primary))]">
        Back to all stories
      </a>
    </footer>
  </article>

</MainLayout>
