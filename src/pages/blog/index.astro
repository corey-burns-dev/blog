---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/main.astro';

const posts = await getCollection('blog');
---

<MainLayout title="Blog">
  <h1>Blog</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</MainLayout>
